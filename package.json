{
  "name": "@b10cks/sdk",
  "module": "index.ts",
  "version": "1.0.0",
  "author": "Michael Wallner @ Coder's Cantina",
  "description": "Official b10cks SDKs",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "bun run build:packages",
    "build:packages": "bun run --filter='@b10cks/client' build && bun run --filter='@b10cks/vue' build && bun run --filter='@b10cks/nuxt' build",
    "test": "bun run --filter='*' test",
    "lint": "bun run --filter='*' lint",
    "clean": "bun run --filter='*' clean",
    "lint:fix": "nx run-many --target=lint --fix",
    "lint:affected": "nx affected:lint",
    "version:check": "bun run scripts/version-check.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun run build && bun run fix:workspace && bun run changeset:publish && bun run check:workspace"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "ajv": "^8.17.1",
    "typescript": "^5.9.0",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}